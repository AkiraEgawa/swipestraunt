generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:mypassword@localhost:5432/swipestraunt?schema=public"
}

model User {
  id        String       @id @default(uuid())
  email     String       @unique
  createdAt DateTime     @default(now())

  swipes    Swipe[]
  rooms     RoomMember[]
}

model Room {
  id        String       @id @default(uuid())
  createdAt DateTime     @default(now())
  location  String       @default("Unknown")
  range     Float        @default(5)
  members   RoomMember[]
  swipes    Swipe[]
}

model RoomMember {
  id      String @id @default(uuid())

  user    User   @relation(fields: [userId], references: [id])
  userId String

  room    Room   @relation(fields: [roomId], references: [id])
  roomId String

  @@unique([userId, roomId])
}

model Swipe {
  id        String   @id @default(uuid())

  user      User     @relation(fields: [userId], references: [id])
  userId   String

  room      Room     @relation(fields: [roomId], references: [id])
  roomId   String

  choice    Boolean
  createdAt DateTime @default(now())

  @@unique([userId, roomId]) // one swipe per user per room
}
