generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:mypassword@localhost:5432/swipestraunt?schema=public"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  swipes    Swipe[]
}

model Room {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  swipes    Swipe[]
}

model Swipe {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String
  choice    Boolean
  createdAt DateTime @default(now())
}